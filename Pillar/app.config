<?xml version="1.0"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <sectionGroup name="userSettings"
                  type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="Pillar.Properties.Settings"
               type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
               allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="applicationSettings"
                  type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="Pillar.Properties.Settings"
               type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
               requirePermission="false" />
    </sectionGroup>
  </configSections>
  <log4net debug="false">
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!-- Pattern to output the caller's file name and line number -->
        <conversionPattern value="%5level [%thread] (%file:%line) - %message%newline" />
      </layout>
    </appender>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <!--do this is with powershell, admin mode:
      New-EventLog EventLogName -source ApplicationName
      add this two parameters into the appender:
      <param name="LogName" value="EventLogName " />
      <param name="ApplicationName" value="ApplicationName" />-->
   <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>
    <appender name="NetSendAppender" type="log4net.Appender.NetSendAppender">
      <server value="SA004757" />
      <recipient value="sar\rakna" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="CollectedLog.txt" />
      <appendToFile value="true" />
      <maximumFileSize value="10MB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %thread %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="PillarLog.txt" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <to value="eh@sa.dk" />
      <from value="****" />
      <subject value="Crash log" />
      <smtpHost value="smtp.gmail.com" />
      <authentication value="Basic" />
      <port value="587" />
      <username value="****" />
      <password value="****" />
      <bufferSize value="10" />
      <EnableSsl value="true" />
      <lossy value="true" />
      <threshold value="DEBUG" />
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="FATAL" />
      </evaluator>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss.fff}	%-5level	%-15logger	%message%newline"          />
      </layout>
    </appender>
    <root>
      <appender-ref ref="Console">
        <threshold value="ALL" />
      </appender-ref>
      <appender-ref ref="EventLogAppender">
        <threshold value="ERROR" />
      </appender-ref>
      <appender-ref ref="FileAppender">
        <threshold value="ALL" />
      </appender-ref>
      <appender-ref ref="RollingFile">
        <threshold value="ALL" />
      </appender-ref>
      <appender-ref ref="NetSendAppender">
        <threshold value="FATAL" />
      </appender-ref>
    </root>
  </log4net>
  <connectionStrings>
    <add name="Pillar.Properties.Settings.bmpSQLiteConnectionString"
      connectionString="Pillar.GlobalPillarApiSettings.SQLITE_CONNECTION_STRING"
      providerName="System.Data.SQLite" />
  </connectionStrings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Apache.NMS.ActiveMQ" publicKeyToken="82756feee3957618" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.5.4.2655" newVersion="1.5.4.2655" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Data.SQLite" publicKeyToken="db937bc2d44ff139" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.0.84.0" newVersion="1.0.84.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <userSettings>
    <Pillar.Properties.Settings>
      <setting name="Path2Settingsfile" serializeAs="String">
        <value>i:\PillarSettingsKNA.xml</value>
      </setting>
    </Pillar.Properties.Settings>
  </userSettings>
  <applicationSettings>
    <Pillar.Properties.Settings>
      <setting name="PillarType" serializeAs="String">
        <value>Pillar</value>
      </setting>
    </Pillar.Properties.Settings>
  </applicationSettings>
</configuration>